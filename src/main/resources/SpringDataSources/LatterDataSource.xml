<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource" name="LatterDataSource">
        <property name="driverClassName" value="com.mysql.jdbc.Driver"/>
        <property name="url" value="jdbc:mysql://localhost:3306/latter?useUnicode=true&amp;characterEncoding=utf-8&amp;useSSL=false&amp;serverTimezone=UTC"/>
        <property name="username" value="root"/>
        <property name="password" value="root"/>
    </bean>
    <bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean" name="LatterSqlSessionFactory">
        <property name="dataSource" ref="LatterDataSource"/>
        <property name="mapperLocations" value="classpath:mapper/latter/*.xml"/>
    </bean>
    <bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        <property name="basePackage" value="cn.mtttt.mapper.Latter"/>
        <property name="sqlSessionFactoryBeanName" value="LatterSqlSessionFactory"/>
    </bean>
    <bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="LatterDataSource"/>
    </bean>
    <bean id="sqlSession" class="org.mybatis.spring.SqlSessionTemplate" name="LatterSessionTemplate">
        <constructor-arg ref="LatterSqlSessionFactory" index="0"/>
    </bean>
    <bean id="latter" class="cn.mtttt.service.impl.LatterServiceImpl">
        <property name="sqlSession" ref="LatterSessionTemplate"/>
    </bean>

